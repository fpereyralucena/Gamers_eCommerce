<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', { customCSS: null }) %>

<body>

  <%- include('partials/header') %>

  <main>

    <h2 class="ingresaTitulo"> Choose your player </h2>

    <form action="register" class="generic-form" method="post" enctype="multipart/form-data">


      <label for="ingresarNombres">Nombres *</label>
      <input type="text" 
      inputmode="latin-name" 
      placeholder="Luigi" 
      name="first_name" 
      id="ingresarNombres"
      value="<%= locals.oldData ? oldData.first_name : null %>" 
      required>
      <% if (locals.errors && errors.first_name) { %>
      <li class="errors"><%= errors.first_name.msg %></li>
      <% } %>

      <label for="ingresarApellidos">Apellidos * </label>
      <input type="text" inputmode="latin-name" placeholder="Mario" name="last_name" id="ingresarApellidos"  value="<%= locals.oldData ? oldData.last_name : null %>" required>
      <% if (locals.errors && errors.last_name) { %>
      <li class="errors"><%= errors.last_name.msg %></li>
      <% } %>
      <label for="nacimiento">Fecha de nacimiento *</label>
      <input type="date"  id="bday" name="bday" autocomplete="bday" value="21/06/1983">

      <label for="ingresaEmail">Email *</label>
      <input type="email" placeholder="consumer@nintendo.com" id="email" name="email" autocomplete="email" pattern=".+@*.com" size="30" value="<%= locals.oldData ? oldData.email : null %>" required>
      <% if (locals.errors && errors.email) { %>
      <li class="errors"><%= errors.email.msg %></li>
      <% } %>
      <label for="password">Contraseña *</label>
      <input type="password" autocomplete="new-password" name="password" id="password" minlength="8"   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Debe contener almenos un número, una mayúscula y un minúscula con 8 o más caracteres" required value="<%= locals.oldData ? oldData.password : null %>">
      <% if (locals.errors && errors.password) { %>
      <li class="errors"><%= errors.password.msg %></li>
      <% } %>
      <label for="password">Repita la Contraseña *</label>
      <input type="password" autocomplete="off" name="password2" id="password2" minlength="8" title="Ambas claves deben coincidir" required value="<%= locals.oldData ? oldData.password2 : null %>">
      <% if (locals.passwordMissmatch) { %>
      <li class="errors"><%= passwordMissmatch %></li>
      <% } %>

      <label for="image">Subir imagen de perfil</label>
      <input type="file" id="image" id="image" name="image" accept="image/png, image/jpeg">

      <div class="buttonsRegister">
        <button type="submit" class="botonSubmitRegister">Aceptar</button>
        <button type="reset" class="botonReset">Borrar</button>
      </div>

    </form>


  </main>

  <%- include ('partials/footer')%>

</body>

</html>